{
  "name": "my-electron-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run next\" \"npm run electron\"",
    "next": "next dev -p 3000",
    "electron": "wait-on http://localhost:3000 && electron .",
    "start": "next start -p 3000 && electron .",
    "build": "next build && electron-builder"
  },
  "build": {
    "appId": "com.sharique.my-electron-app",
    "productName": "My Electron App",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "include": "custom-installer.nsh"
    },
    "compression": "maximum",
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [],
  "author": "Sharique Ahmed",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "next": "^15.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^33.1.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "wait-on": "^8.0.1"
  }
}
